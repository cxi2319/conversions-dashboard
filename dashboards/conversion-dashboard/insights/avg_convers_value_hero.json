{
  "$id": "avg_convers_value_hero",
  "$schema": "https://schema.yext.com/config/analytics/insight/v1",
  "name": "Average Conversion Value ",
  "description": "The average value of a conversion on your sites.",
  "query": {
    "metrics": [
      "yext/TOTAL_CONVERSION_VALUE"
    ],
    "dimensions": [
      "yext/DAYS"
    ],
    "filters": [
      {
        "filter": "yext/date",
        "in": "DAYS_7"
      }
    ]
  },
  "display": {
    "hero": {
      "aggregation": "MEAN"
    }
  }
}