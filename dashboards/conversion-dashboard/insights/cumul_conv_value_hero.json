{
    "$id": "cumul_conv_value_hero",
    "$schema": "https://schema.yext.com/config/analytics/insight/v1",
    "name": "Cumulative Conversion Value",
    "description": "The cumulative sum of Total Conversion Value",
    "query": {
      "metrics": [
        "yext/TOTAL_CONVERSION_VALUE"
      ],
      "dimensions": [
        "yext/DAYS"
      ],
      "filters": [
        {
          "filter": "yext/date",
          "in": "DAYS_7"
        }
      ]
    },
    "display": {
      "hero": {
        "aggregation": "SUM"
      }
    }
  }