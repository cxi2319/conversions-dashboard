{
    "$id": "conv_perfromance_day_table",
    "$schema": "https://schema.yext.com/config/analytics/insight/v1",
    "name": "Conversion Performance by Day",
    "description": "Average Conversion Value, Click Count, Conversion Count, and Total Conversion Value by Day",
    "query": {
      "metrics": [
        "yext/AVERAGE_CONVERSION_VALUE",
        "yext/CLICK_COUNT",
        "yext/CONVERSION_COUNT",
        "yext/TOTAL_CONVERSION_VALUE"
      ],
      "dimensions": [
        "yext/DAYS"
      ],
      "filters": [
        {
          "filter": "yext/date",
          "in": "DAYS_7"
        }
      ]
    },
    "display": {
      "table": {
        "sort": {
          "column": {
            "dimension": "yext/DAYS"
          },
          "descending": true
        }
      }
    }
  }